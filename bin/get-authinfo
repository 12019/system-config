#!/usr/bin/perl
use strict;


my $got_pass=0;
open(my $auth, "<", glob("~/.authinfo")) or die "No .authinfo in your HOME";
while (<$auth>) {
    my @fields = split;
    my ($machine, $user, $pass, $port) = @fields[1, 3, 5, 7];
    if ($ARGV[0] eq $machine) {
        if ($ARGV[1] and $ARGV[1] eq $user or not $ARGV[1]) {
            if ($ARGV[2] and $ARGV[2] eq $port or not $ARGV[2]) {
                print $pass;
                $got_pass = 1;
                last;
            }
        }
    }
}

if (not $got_pass) {
  system("bash >/dev/tty </dev/tty 2>&1 -c 'read -s -p \"Password: \" pass; echo \$pass'");
}
