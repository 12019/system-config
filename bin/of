#!/bin/bash
exec > ~/.logs/of.log 2>&1
set -x

if test $# = 0; then
    set -- "$(xclip -o -selection primary)"
else
    set -- "$(lookup-file "$@")"
fi

if test "$EMACS"; then
    setsid=setsid
else
    setsid=
fi

if test $# = 1 && echo "${1}" | grep -q -i -P -e "^https?://"; then
    $setsid firefox -new-tab "$1"
    exit
fi
$setsid xdg-open "$@"
