#!/bin/bash

function fix-it() {
    (
	set -e
	cd $(dirname "$1")
	target=$(cat "$1" | pn 2)
	target=$(relative-path "$target" $(pwd)/.git)
	echo gitdir: "$target" | tee "$1"
	git config core.worktree $(relative-path $(readlink -f .) $(readlink -f $target)/config)
    )
}

export -f fix-it

find $(pwd) -name .git -type f | xargs bash -c 'for x in "$@"; do fix-it "$x"; done' true
