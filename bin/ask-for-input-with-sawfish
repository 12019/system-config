#!/bin/bash

prompt="> "
TEMP=$(getopt -o p: --long prompt: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -p|--prompt)
            prompt=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

prompt=$(printf %q "$prompt")

sawfish-client -e "(let* ((prompt-completion-fun (lambda ())))
                     (prompt \"$prompt\" nil))"
